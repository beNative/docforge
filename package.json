{
  "name": "docforge",
  "version": "0.2.4",
  "description": "An application to manage and refine documents.",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "package": "npm run build && electron-builder"
  },
  "author": "DocForge Developer",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.1.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.2.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.5",
    "uuid": "^10.0.0"
  },
  "build": {
    "appId": "com.docforge.app",
    "productName": "DocForge",
    "files": [
      "dist/**/*",
      "index.html",
      "assets/**/*",
      "docs/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
