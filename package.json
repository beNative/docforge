{
  "name": "docforge",
  "version": "0.6.4",
  "description": "An application to manage and refine documents.",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build:css && node esbuild.config.js --watch & electron .",
    "build": "npm run build:css && node esbuild.config.js && node scripts/prepare-icons.mjs",
    "dev": "npm run start",
    "package": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --publish always",
    "prepare:icons": "node scripts/prepare-icons.mjs",
    "postinstall": "electron-builder install-app-deps",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./dist/tailwind.css --minify",
    "dev:web": "npm run build && http-server -c-1 -p 4173 .",
    "package:mac:x64": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg --x64",
    "package:win:x64": "npm run build && electron-builder --win nsis --x64",
    "package:win:ia32": "npm run build && electron-builder --win nsis --ia32",
    "package:linux:x64": "npm run build && electron-builder --linux AppImage deb tar.gz --x64",
    "package:linux:arm64": "npm run build && electron-builder --linux AppImage deb tar.gz --arm64",
    "package:linux:armv7l": "npm run build && electron-builder --linux AppImage deb tar.gz --armv7l"
  },
  "author": {
    "name": "Tim Sinaeve",
    "email": "tim.sinaeve@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beNative/docforge.git"
  },
  "dependencies": {
    "better-sqlite3": "^11.1.2",
    "electron-log": "^5.1.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.2.1",
    "node-plantuml": "^0.9.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.16",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "fast-xml-parser": "^5.2.5",
    "http-server": "^14.1.1",
    "icon-gen": "^5.0.0",
    "katex": "^0.16.11",
    "mermaid": "^10.9.1",
    "plantuml-encoder": "^1.4.0",
    "postcss": "^8.4.41",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-katex": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "shiki": "^1.22.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.3"
  },
  "build": {
    "publish": null,
    "appId": "com.electron.docforge",
    "productName": "DocForge",
    "files": [
      "dist/**/*",
      "index.html",
      "assets/**/*",
      "docs/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64", "armv7l"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64", "armv7l"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64", "armv7l"]
        }
      ],
      "icon": "assets/icon.png"
    }
  }
}
