{
  "name": "docforge",
  "version": "0.2.4",
  "description": "An application to manage and refine documents.",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "package": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish always"
  },
  "keywords": [],
  "author": "Tim Sirmov",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.8",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "esbuild": "^0.19.5",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.timsirmov.docforge",
    "productName": "DocForge",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "index.html",
      "*.md",
      "assets/icon.png"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
